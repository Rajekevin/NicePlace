<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        tools:context=".MapsActivity" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="bottom">
    <EditText
        android:id="@+id/TF_location"
        android:layout_width="72dp"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_green_light"
        android:inputType="textPersonName"
        android:visibility="visible" />

    <Button
        android:id="@+id/B_search"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/TF_location"
        android:onClick="onClick"
        android:text="Search" />




    <Button
        android:id="@+id/RK_magasins"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TF_location"
        android:background="@drawable/ic_shopping_cart_black_24dp"
        android:onClick="onClick"
        android:text="Shoppings" />

    <Button
        android:id="@+id/RK_cafe"
        android:layout_width="72dp"
        android:layout_height="54dp"
        android:layout_below="@+id/TF_location"
        android:layout_toEndOf="@+id/RK_magasins"
        android:background="@drawable/ic_local_cafe_black_24dp"
        android:onClick="onClick"
        android:text="CafÃ©" />

    <Button
        android:id="@+id/RK_restaurants"
        android:layout_width="72dp"
        android:layout_height="54dp"
        android:layout_below="@+id/TF_location"
        android:layout_toEndOf="@+id/RK_cafe"
        android:background="@drawable/ic_restaurant_black_24dp"
        android:onClick="onClick"
        android:text="Restaurants" />

        </LinearLayout>
    </RelativeLayout>